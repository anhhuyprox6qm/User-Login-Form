<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.t2009m1_helloworld.controller.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.t2009m1_helloworld.controller.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.example.t2009m1_helloworld.controller.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.t2009m1_helloworld.controller.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <jsp-file>/Admin/views/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/Admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.shoppingcart.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/shopping-cart/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubCartServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.shoppingcart.SubCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubCartServlet</servlet-name>
        <url-pattern>/shopping-cart/sub</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetCartServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.shoppingcart.GetCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCartServlet</servlet-name>
        <url-pattern>/shopping-cart/get</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveCartServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.shoppingcart.RemoveCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveCartServlet</servlet-name>
        <url-pattern>/shopping-cart/remove</url-pattern>
    </servlet-mapping>
    <!-- end of client servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1heloworld.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
